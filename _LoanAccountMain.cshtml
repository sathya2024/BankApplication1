@{
    ViewBag.Title = "Loan Account Management";
    Layout = "~/Shared/_LayoutPage1.cshtml";
}

<div class="dashboard-container">
    <h2>Loan Account Management</h2>

    <div class="tabs">
        <button class="tablink" onclick="loadPartial('_CreateLoanAccount')">Create Loan</button>
        <button class="tablink" onclick="loadPartial('_ViewLoanTransactions')">View Transactions</button>
        <button class="tablink" onclick="loadPartial('_PayEMI')">Pay EMI</button>
        <button class="tablink" onclick="loadPartial('_ForecloseLoan')">Foreclose Loan</button>
        <button class="tablink" onclick="loadPartial('_CloseLoanAccount')">Close Loan</button>
    </div>

    <div id="partialContainer" style="margin-top:30px;">
        <p>Select an option to manage loan accounts.</p>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function loadPartial(partialName) {
        $.ajax({
            url: '/Manager/' + partialName,
            type: 'GET',
            success: function (data) {
                $('#partialContainer').html(data);
            },
            error: function (xhr) {
                alert('Error loading content: ' + xhr.status + ' ' + xhr.statusText);
            }
        });
    }

</script>

<style>
    .tablink {
        padding: 10px 20px;
        border: none;
        background-color: #5563DE;
        color: white;
        border-radius: 8px;
        margin: 5px;
        cursor: pointer;
    }

        .tablink:hover {
            background-color: #3e4bd0;
        }
</style>
