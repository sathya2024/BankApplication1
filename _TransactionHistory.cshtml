@model IEnumerable<Banking.SavingsTransaction>
@{
    Layout = null;
}

<h3>Transaction History</h3>

<form id="historyForm" method="post" action="@Url.Action("TransactionHistory","Manager")" style="margin-bottom:20px;">
    <div class="form-group" style="display:flex; gap:10px;">
        <input type="text" name="sbAccountId" class="form-control" placeholder="Enter SB Account ID to filter" maxlength="10" />
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Account ID</th>
            <th>Amount (₹)</th>
            <th>Type</th>
            <th>Date & Time</th>
            <th>Balance (₹)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TransactionId</td>
                <td>@t.SBAccountId</td>
                <td>@t.Amount</td>
                <td>@t.TransactionType</td>
                <td>@(t.TransactionDate?.ToString("dd-MM-yyyy HH:mm:ss") ?? "-")</td>
                <td>@t.Balance</td>
            </tr>
        }
    </tbody>
</table>

<script>
$('#historyForm').submit(function(e){
    e.preventDefault();
    $.ajax({
        url: $(this).attr('action'),
        type: 'POST',
        data: $(this).serialize(),
        success: function(data){
            $('#transactionPartial').html(data);
        },
        error: function(){
            alert("Failed to load transaction history!");
        }
    });
});
</script>

